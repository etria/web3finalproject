@model IEnumerable<GameStoreDB1.Game>

@{
    ViewBag.Title = "_SelectedGames";
}
<script type="text/javascript">

</script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GameSystem.SystemName)
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GameSystem.SystemName)
            </td>
            <td>
                <button value="@item.GameId" type="button" onclick="selectGame(this)">Select</button>
            </td>

        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


