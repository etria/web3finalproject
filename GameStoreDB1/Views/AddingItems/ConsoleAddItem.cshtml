@model GameStoreDB1.Models.AddingItem
@{
    ViewBag.Title = "ConsoleAddItem";
}

<h2>ConsoleAddItem</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Item</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.ConditionId, "Condition", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ConditionId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConditionId, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Hidden("ConsoleId");



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GameAddItem" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Console")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
