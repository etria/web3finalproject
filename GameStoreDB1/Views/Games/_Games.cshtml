
@model IEnumerable<GameStoreDB1.Game>

@{
    ViewBag.Title = "_Games";
}
<script type="text/javascript">

</script>

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.GameSystem.SystemName)
        </th>
        <th>

        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GameSystem.SystemName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.GameId }) |
                @Html.ActionLink("Add Item To Inventory", "AddItem", new { id = item.GameId })
            </td>

        </tr>
    }

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
